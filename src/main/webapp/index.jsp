<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>E-Commerce Website</title>
</head>
<body>
    <header>
        <h1>Welcome to E-Shop</h1>
    </header>
    <main>
        <section id="mobiles">
            <h2>Mobiles</h2>
            <div class="products">
                <div class="product">
                    <img src="image_placeholder.jpg" alt="Mobile 1">
                    <p>Mobile 1</p>
                    <p>Price: ₹10,000</p>
                </div>
                <!-- Repeat for 20 products -->
            </div>
        </section>
        <section id="laptops">
            <h2>Laptops</h2>
            <div class="products">
                <div class="product">
                    <img src="image_placeholder.jpg" alt="Laptop 1">
                    <p>Laptop 1</p>
                    <p>Price: ₹50,000</p>
                </div>
                <!-- Repeat for 20 products -->
            </div>
        </section>
        <section id="clothes">
            <h2>Clothes</h2>
            <div class="products">
                <div class="product">
                    <img src="image_placeholder.jpg" alt="Clothes 1">
                    <p>T-Shirt</p>
                    <p>Price: ₹500</p>
                </div>
                <!-- Repeat for 20 products -->
            </div>
        </section>
    </main>
    <footer>
        <p>&copy; 2025 E-Shop. All rights reserved.</p>
    </footer>
    <script src="scripts.js"></script>
</body>
</html>
